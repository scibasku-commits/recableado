	<button
		class="float-btn copy-float-btn"
		data-url={url}
		title={t('post.copyLink') as string}
		data-platform="copy"
	>
		<svg viewBox="0 0 24 24"><path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/></svg>
		<span class="float-tooltip">{t('post.copied') as string}</span>
	</button>
</aside>

<style>
	.floating-share {
		position: fixed;
		left: calc(50% - 340px - 72px);
		top: 50%;
		transform: translateY(-50%);
		display: flex;
		flex-direction: column;
		gap: 0.6em;
		z-index: 100;
		opacity: 0;
		pointer-events: none;
		transition: opacity 0.3s ease;
	}
	.floating-share.visible {
		opacity: 1;
		pointer-events: auto;
	}
	.float-btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: var(--heading);
		color: white;
		text-decoration: none;
		border: none;
		cursor: pointer;
		transition: background 0.2s, transform 0.2s;
		position: relative;
	}
	.float-btn:hover {
		background: var(--naranja);
		color: white;
		transform: scale(1.15);
	}
	.float-btn svg {
		width: 18px;
		height: 18px;
		fill: currentColor;
	}
	.float-tooltip {
		position: absolute;
		left: calc(100% + 8px);
		top: 50%;
		transform: translateY(-50%);
		background: var(--heading);
		color: white;
		padding: 3px 10px;
		border-radius: 4px;
		font-size: 0.72em;
		font-family: 'Bricolage Grotesque', sans-serif;
		white-space: nowrap;
		opacity: 0;
		transition: opacity 0.3s;
		pointer-events: none;
	}
	.float-tooltip.show {
		opacity: 1;
	}

	@media (max-width: 1099px) {
		.floating-share {
			display: none !important;
		}
	}
</style>

<script>
	function initFloatingShare() {
		const sidebar = document.querySelector('.floating-share') as HTMLElement;
		if (!sidebar) return;

		const titleEl = document.querySelector('.title') as HTMLElement;
		const shareSection = document.querySelector('.share-section') as HTMLElement;
		if (!titleEl) return;

		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.target === titleEl) {
					// Show sidebar when title scrolls out of view
					if (!entry.isIntersecting) {
						sidebar.classList.add('visible');
					} else {
						sidebar.classList.remove('visible');
					}
				}
				if (entry.target === shareSection) {
					// Hide when bottom share section is visible
					if (entry.isIntersecting) {
						sidebar.classList.remove('visible');
					}
				}
			});
		}, { threshold: 0 });

		observer.observe(titleEl);
		if (shareSection) observer.observe(shareSection);

		// Copy button
		const copyBtn = sidebar.querySelector('.copy-float-btn');
		if (copyBtn) {
			copyBtn.addEventListener('click', async () => {
				const url = copyBtn.getAttribute('data-url');
				if (url) {
					await navigator.clipboard.writeText(url);
					const tooltip = copyBtn.querySelector('.float-tooltip');
					if (tooltip) {
						tooltip.classList.add('show');
						setTimeout(() => tooltip.classList.remove('show'), 2000);
					}
				}
			});
		}

		// Track clicks
		sidebar.querySelectorAll('[data-platform]').forEach(btn => {
			btn.addEventListener('click', () => {
				const platform = (btn as HTMLElement).dataset.platform;
				const slug = window.location.pathname.replace(/^\/(?:en\/)?blog\//, '').replace(/\/$/, '');
				if (typeof window.__vcl_analytics !== 'undefined' || typeof window.va !== 'undefined') {
					try {
						// @ts-ignore
						window.va?.track?.('share_click', { platform, slug });
					} catch {}
				}
			});
		});
	}

	initFloatingShare();
	document.addEventListener('astro:after-swap', initFloatingShare);
</script>
