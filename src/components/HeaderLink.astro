---
import type { HTMLAttributes } from 'astro/types';
import type { Lang } from '../i18n/languages';
import { stripLangPrefix } from '../i18n/utils';

type Props = HTMLAttributes<'a'> & { lang?: Lang };

const { href, class: className, lang = 'es', ...props } = Astro.props;
const pathname = stripLangPrefix(Astro.url.pathname.replace(import.meta.env.BASE_URL, ''));
const hrefClean = stripLangPrefix(String(href));
const subpath = pathname.match(/[^\/]+/g);
const isActive = hrefClean === pathname || hrefClean === '/' + (subpath?.[0] || '');
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
