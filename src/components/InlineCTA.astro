---
import type { Lang } from '../i18n/languages';
import { useTranslations } from '../i18n/utils';

interface Props {
	text?: string;
	variant?: 'subtle' | 'card';
	lang?: Lang;
}

const { text, variant = 'subtle', lang = 'es' } = Astro.props;
const t = useTranslations(lang);
const ctaText = text || (t('cta.inline') as string);
---

<div class={`inline-cta inline-cta--${variant}`} data-inline-cta>
	<p class="inline-cta__text">{ctaText}</p>
	<div class="inline-cta__buttons">
		<a class="inline-cta__btn" data-platform="linkedin" title="LinkedIn">
			<svg viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
		</a>
		<a class="inline-cta__btn" data-platform="whatsapp" title="WhatsApp">
			<svg viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
		</a>
		<button class="inline-cta__btn inline-cta__copy" data-platform="copy" title="Copy link">
			<svg viewBox="0 0 24 24"><path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/></svg>
			<span class="inline-cta__tooltip">{t('post.copied') as string}</span>
		</button>
	</div>
</div>

<style>
	.inline-cta {
		margin: 2em 0;
		text-align: center;
	}
	.inline-cta--subtle {
		padding: 1.5em 0;
		border-top: 1px solid var(--border);
		border-bottom: 1px solid var(--border);
	}
	.inline-cta--card {
		padding: 1.5em;
		background: white;
		border-left: 4px solid var(--naranja);
		border-radius: 0 8px 8px 0;
		box-shadow: 0 2px 8px rgba(26, 54, 93, 0.08);
	}
	.inline-cta__text {
		font-family: 'Bricolage Grotesque', sans-serif;
		font-size: 1em;
		font-weight: 600;
		color: var(--heading);
		margin: 0 0 0.8em;
	}
	.inline-cta__buttons {
		display: flex;
		justify-content: center;
		gap: 0.6em;
	}
	.inline-cta__btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: var(--heading);
		color: white;
		text-decoration: none;
		border: none;
		cursor: pointer;
		transition: background 0.2s, transform 0.2s;
		position: relative;
	}
	.inline-cta__btn:hover {
		background: var(--naranja);
		color: white;
		transform: scale(1.1);
	}
	.inline-cta__btn svg {
		width: 18px;
		height: 18px;
		fill: currentColor;
	}
	.inline-cta__tooltip {
		position: absolute;
		bottom: -28px;
		left: 50%;
		transform: translateX(-50%);
		background: var(--heading);
		color: white;
		padding: 3px 10px;
		border-radius: 4px;
		font-size: 0.72em;
		font-family: 'Bricolage Grotesque', sans-serif;
		white-space: nowrap;
		opacity: 0;
		transition: opacity 0.3s;
		pointer-events: none;
	}
	.inline-cta__tooltip.show {
		opacity: 1;
	}
</style>

<script>
	function initInlineCTAs() {
		document.querySelectorAll('[data-inline-cta]').forEach(cta => {
			const pageUrl = window.location.href;
			const pageTitle = document.title;
			const encodedUrl = encodeURIComponent(pageUrl);
			const encodedTitle = encodeURIComponent(pageTitle);

			const linkedinBtn = cta.querySelector('[data-platform="linkedin"]') as HTMLAnchorElement;
			const whatsappBtn = cta.querySelector('[data-platform="whatsapp"]') as HTMLAnchorElement;
			const copyBtn = cta.querySelector('[data-platform="copy"]');

			if (linkedinBtn) {
				linkedinBtn.href = `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`;
				linkedinBtn.target = '_blank';
				linkedinBtn.rel = 'noopener noreferrer';
			}
			if (whatsappBtn) {
				whatsappBtn.href = `https://wa.me/?text=${encodedTitle}%20${encodedUrl}`;
				whatsappBtn.target = '_blank';
				whatsappBtn.rel = 'noopener noreferrer';
			}
			if (copyBtn) {
				copyBtn.addEventListener('click', async () => {
					await navigator.clipboard.writeText(pageUrl);
					const tooltip = copyBtn.querySelector('.inline-cta__tooltip');
					if (tooltip) {
						tooltip.classList.add('show');
						setTimeout(() => tooltip.classList.remove('show'), 2000);
					}
				});
			}

			// Track clicks
			cta.querySelectorAll('[data-platform]').forEach(btn => {
				btn.addEventListener('click', () => {
					const platform = (btn as HTMLElement).dataset.platform;
					try {
						// @ts-ignore
						window.va?.track?.('share_click', { platform, source: 'inline_cta' });
					} catch {}
				});
			});
		});
	}

	initInlineCTAs();
	document.addEventListener('astro:after-swap', initInlineCTAs);
</script>
