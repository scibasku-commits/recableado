<style>
	main {
		max-width: 780px;
	}
	.hero {
		text-align: center;
		margin-bottom: 2.5em;
		padding-bottom: 1.5em;
		border-bottom: 1px solid var(--border);
	}
	.hero h1 {
		font-size: 2.4em;
		line-height: 1.15;
		margin-bottom: 0.4em;
	}
	.subtitle {
		font-family: 'Lora', Georgia, serif;
		font-style: italic;
		color: var(--gray);
		font-size: 1.05em;
		margin: 0;
	}

	/* Table */
	.table-wrap {
		margin: 2em 0;
		overflow-x: auto;
	}
	table {
		width: 100%;
		border-collapse: collapse;
		font-size: 0.88em;
	}
	thead {
		background: var(--heading);
		color: #fff;
	}
	th {
		padding: 0.7em 0.6em;
		text-align: left;
		font-family: 'Bricolage Grotesque', sans-serif;
		font-weight: 600;
		font-size: 0.9em;
		letter-spacing: 0.03em;
	}
	td {
		padding: 0.55em 0.6em;
		border-bottom: 1px solid var(--border);
	}
	.col-num { width: 3em; text-align: center; }
	.col-nota { width: 4em; text-align: center; }
	.col-fecha { width: 5em; }
	th.col-num, td:first-child { text-align: center; }
	th.col-nota { text-align: center; }
	td:nth-child(4) { text-align: center; font-family: 'Bricolage Grotesque', sans-serif; font-weight: 600; }

	tbody tr:nth-child(even) {
		background: rgba(26, 54, 93, 0.07);
	}
	tbody tr:hover {
		background: rgba(232, 130, 92, 0.08);
	}

	/* Highlight rows */
	tr.highlight td {
		background: rgba(232, 130, 92, 0.1);
	}
	tr.final td {
		background: var(--heading);
		color: #fff;
		font-weight: 600;
	}
	tr.final a {
		color: #fff;
	}
	tr.final td:nth-child(4) {
		color: #ffd666;
		font-size: 1.1em;
	}
	tr.total td {
		border-top: 2px solid rgba(255,255,255,0.3);
	}

	/* Stats bar */
	.stats {
		display: flex;
		justify-content: space-around;
		gap: 1em;
		margin: 2.5em 0;
		padding: 1.5em 1em;
		background: var(--heading);
		border-radius: 8px;
		text-align: center;
	}
	.stat {
		display: flex;
		flex-direction: column;
	}
	.stat-number {
		font-family: 'Bricolage Grotesque', sans-serif;
		font-size: 1.6em;
		font-weight: 700;
		color: #ffd666;
		line-height: 1.2;
	}
	.stat-label {
		font-size: 0.75em;
		color: rgba(255,255,255,0.7);
		margin-top: 0.3em;
		letter-spacing: 0.03em;
	}

	/* Jose quotes */
	h2 {
		margin-top: 2em;
	}
	blockquote.jose {
		border-left: 4px solid var(--link);
		background: rgba(232, 130, 92, 0.07);
		padding: 1em 1.2em;
		margin: 1.5em 0;
		border-radius: 0 6px 6px 0;
	}
	blockquote.jose p {
		margin: 0;
		font-style: italic;
		font-size: 1.05em;
		line-height: 1.6;
		color: var(--text);
	}
	blockquote.jose cite {
		display: block;
		margin-top: 0.5em;
		font-size: 0.82em;
		color: var(--gray);
		font-style: normal;
	}

	/* Back link */
	.back-link {
		margin-top: 3em;
		padding-top: 1.5em;
		border-top: 1px solid var(--border);
	}
	.back-link a {
		font-family: 'Bricolage Grotesque', sans-serif;
		font-size: 0.95em;
	}

	@media (max-width: 720px) {
		.hero h1 {
			font-size: 1.8em;
		}
		.stats {
			flex-wrap: wrap;
			gap: 1.2em 2em;
		}
		.stat-number {
			font-size: 1.3em;
		}
		table {
			font-size: 0.82em;
		}
		.col-tema {
			display: none;
		}
		th.col-tema {
			display: none;
		}
	}
</style>
