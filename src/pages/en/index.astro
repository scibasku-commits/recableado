---
export const prerender = true;
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import Lightbox from '../../components/Lightbox.astro';
import PostStatsLoader from '../../components/PostStatsLoader.astro';
import { SITE_TITLE } from '../../consts';
import { useTranslations } from '../../i18n/utils';

const lang = 'en' as const;
const t = useTranslations(lang);
const SITE_DESCRIPTION_EN = 'A 72-year-old traveller discovering the last continent';

// Use EN posts if available, fallback to ES
let posts = (await getCollection('blogEn')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
if (posts.length === 0) {
	posts = (await getCollection('blogEs')).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
	);
}
const latestPost = posts[0];
const readingTime = latestPost?.body ? Math.max(1, Math.ceil(latestPost.body.split(/\s+/).length / 200)) : 5;

const tagStyles: Record<string, { background: string; color: string }> = {
	'üìô Memoria': { background: '#1a365d', color: 'white' },
	'üî• Ahora': { background: '#e8825c', color: 'white' },
	'üîÆ Horizonte': { background: 'linear-gradient(135deg, #1a365d, #e8825c)', color: 'white' },
	'üõ†Ô∏è Taller': { background: '#a0aec0', color: 'white' },
	'üòÇ An√©cdota': { background: '#fbd38d', color: '#2d3748' },
	'üéø Vida': { background: '#48bb78', color: 'white' },
	'‚≠ê Rese√±a': { background: '#d69e2e', color: 'white' },
};
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION_EN} lang={lang} />
	</head>
	<body>
		<Header lang={lang} />
		<main>
			<!-- Hero: Infografia landscape -->
			<section class="hero">
				<img
					src="/images/odisea-landscape.webp"
					alt="Giora Gilead: The Rewired Odyssey - complete infographic"
					class="hero-img zoomable"
					loading="eager"
				/>
				<p class="hero-caption">{t('home.heroCaption') as string}</p>
			</section>

			<!-- Stats grid -->
			<section class="stats-grid">
				<div class="stat-card">
					<span class="stat-number">72</span>
					<span class="stat-label">{t('home.years') as string}</span>
				</div>
				<div class="stat-card">
					<span class="stat-number">42</span>
					<span class="stat-label">{t('home.sellingTrips') as string}</span>
				</div>
				<div class="stat-card">
					<span class="stat-number">95</span>
					<span class="stat-label">{t('home.finalGrade') as string}</span>
				</div>
				<div class="stat-card">
					<span class="stat-number">0</span>
					<span class="stat-label">{t('home.itEmployees') as string}</span>
				</div>
			</section>

			<!-- Latest post -->
			{latestPost && (
				<section class="latest-post">
					<h2 class="section-title">{t('blog.latest') as string}</h2>
					<a href={`/en/blog/${latestPost.id}/`} class="post-card" data-slug={latestPost.id}>
						<div class="post-thumb">
							<img src={`/og/${latestPost.id}.png`} alt="" />
						</div>
						<div class="post-content">
							{latestPost.data.tags && (
								<div class="post-tags">
									{latestPost.data.tags.map((tag: string) => {
										const style = tagStyles[tag] || { background: '#a0aec0', color: 'white' };
										return (
											<span class="tag" style={`background: ${style.background}; color: ${style.color};`}>
												{tag}
											</span>
										);
									})}
								</div>
							)}
							<h3 class="post-title">{latestPost.data.title}</h3>
							<p class="post-excerpt">{latestPost.data.description}</p>
							<div class="post-meta">
								<FormattedDate date={latestPost.data.pubDate} lang={lang} />
								<span class="post-reading">&middot; {readingTime} {t('blog.minRead') as string}</span>
								<span class="post-stats" style="display:none"></span>
							</div>
							<span class="post-link">{t('blog.read') as string} &rarr;</span>
						</div>
					</a>
				</section>
			)}

			<!-- Quote -->
			<section class="quote-section">
				<blockquote>
					<p>{t('home.quote') as string}</p>
					<footer class="quote-attribution">{t('home.quoteAttribution') as string}</footer>
				</blockquote>
			</section>

			<!-- CTA -->
			<section class="cta-section">
				<p class="cta-text">{t('home.cta') as string}</p>
				<a href="/en/blog/the-night-of-the-gin-tonic-and-the-prompt/" class="btn-primary">{t('home.ctaButton') as string}</a>
			</section>
		</main>
		<Footer lang={lang} />
		<Lightbox />
		<PostStatsLoader />
	</body>
</html>
<style>
	main {
		padding-top: 2em;
	}

	/* Hero */
	.hero {
		text-align: center;
		margin-bottom: 2.5em;
	}
	.hero-img {
		width: 100%;
		max-width: 1200px;
		border-radius: 12px;
		box-shadow: 0 4px 20px rgba(26, 54, 93, 0.15);
	}
	.hero-caption {
		font-family: 'Bricolage Grotesque', sans-serif;
		color: var(--gray);
		font-size: 0.95em;
		margin-top: 0.8em;
		font-style: italic;
	}

	/* Stats */
	.stats-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 1em;
		margin-bottom: 3em;
	}
	.stat-card {
		background: var(--heading);
		border-radius: 12px;
		padding: 1.5em 1em;
		text-align: center;
		display: flex;
		flex-direction: column;
		gap: 0.3em;
	}
	.stat-number {
		font-family: 'Bricolage Grotesque', sans-serif;
		font-size: 2.5em;
		font-weight: 700;
		color: var(--naranja);
		line-height: 1;
	}
	.stat-label {
		font-size: 0.8em;
		color: rgba(255, 255, 255, 0.85);
		line-height: 1.3;
	}

	/* Latest post card */
	.latest-post {
		margin-bottom: 3em;
	}
	.post-card {
		display: flex;
		gap: 1.5em;
		text-decoration: none;
		padding: 1.2em;
		border-radius: 12px;
		border: 1px solid var(--border);
		background: white;
		transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
	}
	.post-card:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 16px rgba(26, 54, 93, 0.1);
		border-color: var(--naranja);
	}
	.post-thumb {
		flex-shrink: 0;
		width: 200px;
		height: 140px;
		border-radius: 8px;
		overflow: hidden;
	}
	.post-thumb img,
	.post-thumb-fallback img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 8px;
	}
	.post-content {
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-width: 0;
	}
	.post-tags {
		display: flex;
		gap: 0.4em;
		margin-bottom: 0.5em;
	}
	.post-tags .tag {
		border-radius: 999px;
		padding: 2px 10px;
		font-size: 0.72em;
		font-family: 'Bricolage Grotesque', sans-serif;
		white-space: nowrap;
	}
	.post-title {
		font-family: 'Bricolage Grotesque', sans-serif;
		color: var(--heading);
		font-size: 1.2em;
		margin: 0 0 0.4em;
		line-height: 1.3;
	}
	.post-excerpt {
		color: var(--text);
		font-size: 0.9em;
		margin: 0 0 0.5em;
		line-height: 1.6;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
	.post-meta {
		font-size: 0.8em;
		color: var(--gray);
		margin-bottom: 0.5em;
	}
	.post-reading {
		margin-left: 0.2em;
	}
	.post-link {
		font-family: 'Bricolage Grotesque', sans-serif;
		color: var(--link);
		font-weight: 600;
		font-size: 0.9em;
	}
	.post-card:hover .post-link {
		color: var(--naranja);
	}

	/* Quote */
	.quote-section {
		margin-bottom: 3em;
	}
	.quote-attribution {
		display: block;
		font-size: 0.85em;
		color: var(--gray);
		margin-top: 0.8em;
		font-style: normal;
	}

	/* CTA */
	.cta-section {
		text-align: center;
		padding: 2.5em 1em;
		background: white;
		border-radius: 12px;
		border: 1px solid var(--border);
		margin-bottom: 2em;
	}
	.cta-text {
		font-family: 'Bricolage Grotesque', sans-serif;
		font-size: 1.4em;
		color: var(--heading);
		font-weight: 600;
		margin-bottom: 1em;
		line-height: 1.3;
	}

	@media (max-width: 720px) {
		.stats-grid {
			grid-template-columns: repeat(2, 1fr);
		}
		.stat-number {
			font-size: 2em;
		}
		.post-card {
			flex-direction: column;
		}
		.post-thumb {
			width: 100%;
			height: 180px;
		}
		.cta-text {
			font-size: 1.2em;
		}
	}
</style>
